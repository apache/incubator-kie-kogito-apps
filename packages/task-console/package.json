{
  "name": "@kogito-apps/task-console",
  "version": "1.0.0",
  "main": "index.js",
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-apps.git"
  },
  "scripts": {
    "build:prod": "yarn run lint && webpack --config webpack.prod.js && yarn run test",
    "start": "webpack-dev-server --hot --color --progress --info=true --config webpack.dev.js",
    "test:report": "yarn test --ci --reporters=jest-junit",
    "test": "jest --ci --reporters=default --reporters=jest-junit",
    "update-snapshot": "jest --updateSnapshot",
    "test:coverage": "jest --coverage",
    "dev": "concurrently 'yarn  start'",
    "lint": "tslint -c ./tslint.json --project .",
    "format": "prettier --check --write ../../packages/management-console/src/**/*.{tsx,ts,js}",
    "build:bundle-profile": "webpack --config webpack.prod.js --profile --json > stats.json",
    "bundle-profile:analyze": "yarn build:bundle-profile && webpack-bundle-analyzer ./stats.json",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@patternfly/patternfly": "^2.49.0",
    "@patternfly/react-core": "^3.129.3",
    "@patternfly/react-icons": "^3.14.28",
    "@patternfly/react-styles": "^3.6.15",
    "@patternfly/react-table": "^2.24.64",
    "@patternfly/react-tokens": "^2.7.14",
    "apollo-boost": "^0.4.4",
    "axios": "^0.19.0",
    "camel-case": "^3.0.0",
    "concurrently": "^5.0.0",
    "graphql": "^14.5.8",
    "lodash": "^4.17.15",
    "lower-case": "1.1.4",
    "no-case": "2.3.2",
    "react-apollo": "^3.1.3",
    "react-event-timeline": "^1.6.3",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "upper-case": "1.1.3"
  },
  "devDependencies": {
    "@apollo/react-testing": "^3.1.3",
    "@fortawesome/fontawesome-free": "^5.10.2",
    "@fortawesome/fontawesome-svg-core": "^1.2.22",
    "@fortawesome/free-solid-svg-icons": "^5.10.2",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.19",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^4.3.5",
    "@types/webpack": "^4.39.1",
    "apollo-server-express": "^2.9.16",
    "babel-jest": "^24.9.0",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.3",
    "express": "^4.17.1",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "imagemin": "^7.0.0",
    "jest": "^24.9.0",
    "jest-junit": "^9.0.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node": "^12.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "^1.18.2",
    "raw-loader": "^3.1.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-test-renderer": "^16.10.2",
    "style-loader": "^1.0.0",
    "svg-url-loader": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.0.4",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.0.0",
    "tslint-react-hooks": "^2.2.1",
    "typescript": "^3.6.2",
    "url-loader": "^2.1.0",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.8.0",
    "webpack-merge": "^4.2.2"
  },
  "jest": {
    "setupFiles": [
      "../../config/Jest-config/test-shim.js",
      "../../config/Jest-config/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.(js|ts|tsx)$": "../../config/Jest-config/test-preprocessor.js",
      "\\.(js|ts|tsx)$": "../../node_modules/babel-jest"
    },
    "testMatch": [
      "**/tests/*.(ts|tsx|js)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|svg)$": "../../config/Jest-config/fileMock.js",
      "\\.(scss|sass|css)$": "identity-obj-proxy"
    },
    "transformIgnorePatterns": [
      "../../node_modules/?!(@patternfly/react-core/dist/esm/expertimental)"
    ]
  }
}
