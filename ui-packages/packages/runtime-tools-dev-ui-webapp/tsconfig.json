{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2018",
        "declarationDir": "./dist",
        "declaration": true,
        "downlevelIteration": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.jsx",
        "src/**/*.js",
        "../../config/declare.d.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/__mocks__",
        "src/**/tests"
    ],
    "preserveSymlinks": true
}
