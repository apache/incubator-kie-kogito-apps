{
  "name": "@kogito-apps/cloud-event-form",
  "version": "1.0.0",
  "description": "Cloud Event Form component.",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-apps.git"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "copy:css": "copyfiles -u 1 \"src/**/*.{sass,scss,css,svg,png}\" dist/",
    "build": "rimraf dist && tsc -m commonjs -p tsconfig.json && pnpm run copy:css",
    "build:prod": "pnpm run clean && pnpm run lint && pnpm -r -F @kogito-apps/components-common build:prod && pnpm run build",
    "test:report": "pnpm run test --ci --reporters=jest-junit",
    "test": "jest --runInBand --ci --reporters=default --reporters=jest-junit",
    "update-snapshot": "jest --updateSnapshot",
    "test:coverage": "rimraf coverage && pnpm run test --coverage",
    "lint": "eslint './src/**/*.ts{,x}'",
    "format": "prettier --config ../../.prettierrc --check --write './src/**/*.{tsx,ts,js}'",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@kogito-apps/components-common": "workspace:*",
    "@kogito-tooling/envelope": "0.10.0",
    "@kogito-tooling/envelope-bus": "0.10.0",
    "@patternfly/patternfly": "^4.108.2",
    "@patternfly/react-code-editor": "4.2.92",
    "@patternfly/react-core": "4.157.3",
    "@patternfly/react-icons": "4.11.17",
    "lodash": "^4.17.15",
    "monaco-yaml": "3.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-monaco-editor": "^0.41.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@kogito-apps/ouia-tools": "workspace:*",
    "@testing-library/jest-dom": "^5.12.0",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.5",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.8.0",
    "babel-jest": "^25.1.0",
    "copyfiles": "^2.4.1",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-junit": "^10.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "typescript": "^4.4.2",
    "uuid": "^3.3.3",
    "waait": "^1.0.5"
  },
  "jest": {
    "setupFiles": [
      "./config/Jest-config/test-shim.js",
      "./config/Jest-config/test-setup.js",
      "core-js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "./src/static",
      "dist/",
      "./src/envelope/WorkflowFormEnvelope.tsx"
    ],
    "coverageReporters": [
      [
        "lcov",
        {
          "projectRoot": "../../"
        }
      ]
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transformIgnorePatterns": [],
    "transform": {
      "^.+\\.jsx?$": "./config/Jest-config/babel-jest-wrapper.js",
      "^.+\\.(ts|tsx)$": "ts-jest",
      "\\.(jpg|jpeg|png|svg)$": "./config/Jest-config/fileMocks.js"
    },
    "testMatch": [
      "**/tests/*.(ts|tsx|js)"
    ],
    "moduleNameMapper": {
      "\\.(scss|sass|css)$": "identity-obj-proxy",
      "monaco-editor": "<rootDir>/__mocks__/monacoMock.js"
    }
  }
}
