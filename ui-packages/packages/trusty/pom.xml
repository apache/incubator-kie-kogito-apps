<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>kie-bc-editors-unpacked</artifactId>
    <groupId>org.kie.kogito</groupId>
    <packaging>jar</packaging>
    <version>0.0.0</version>

    <repositories>
        <repository>
            <id>JBoss Nexus</id>
            <url>https://repository.jboss.org/nexus/content/groups/public</url>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
            </snapshots>
        </repository>
    </repositories>

    <properties>
        <version.dmn.webapp>7.42.0-SNAPSHOT</version.dmn.webapp>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.kie.workbench</groupId>
            <artifactId>kie-wb-common-dmn-webapp-kogito-runtime</artifactId>
            <version>${version.dmn.webapp}</version>
            <type>war</type>
        </dependency>
    </dependencies>
    <build>
        <plugins>

            <!-- CLEAN-UP -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>Delete existing resources</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>${project.basedir}/static/gwt-editors</directory>
                                </fileset>
                                <fileset>
                                    <directory>${project.basedir}/static/envelope</directory>
                                </fileset>
                            </filesets>
                        </configuration>
                    </execution>
                    <execution>
                        <id>Delete temporary resources created during yarn install</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- UNPACK -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-dmn</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <excludes>WEB-INF/</excludes>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.kie.workbench</groupId>
                                    <artifactId>kie-wb-common-dmn-webapp-kogito-runtime</artifactId>
                                    <version>${version.dmn.webapp}</version>
                                    <type>war</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/unpacked/dmn</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- COPY -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <!-- Unpacked editors to React-App's public path -->
                    <execution>
                        <id>copy-dmn-resources</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.basedir}/static/gwt-editors/dmn</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.build.directory}/unpacked/dmn/</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <!-- Embedded Editor's default envelope to React-App's public path -->
                    <execution>
                        <id>copy-envelope</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.basedir}/static/envelope</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.build.directory}/../../../node_modules/@kogito-tooling/kie-bc-editors/dist/envelope-dist</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>
