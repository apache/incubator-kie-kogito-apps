{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declarationDir": "./dist",
    "declaration": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "files": [
    "./src/index.ts"
  ],
  "include": [
    "../../config/declare.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "../../node_modules"
  ]
}
