{
  "name": "@kogito-apps/trusty",
  "version": "1.0.0",
  "main": "index.js",
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-apps.git"
  },
  "dependencies": {
    "@kogito-apps/common": "1.0.0",
    "@kogito-tooling/kie-editors-standalone": "^0.8.6",
    "@patternfly/react-charts": "6.12.12",
    "@testing-library/react": "^10.4.7",
    "@testing-library/react-hooks": "^3.3.0",
    "date-fns": "^2.14.0",
    "flatpickr": "^4.6.3",
    "sass": "^1.26.10",
    "sass-loader": "^9.0.2",
    "typescript": "~3.8.3",
    "use-react-router-breadcrumbs": "^1.0.4"
  },
  "scripts": {
    "start": "webpack-dev-server --hot --color --progress --info=true --config webpack.dev.js",
    "build:prod": "yarn lint && webpack --config webpack.prod.js",
    "test": "jest --runInBand --ci --reporters=default --reporters=jest-junit",
    "test:coverage": "yarn test --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint './src/**/*.ts{,x}'",
    "mock-server": "json-server --watch api-mock/db.js --routes api-mock/routes.json --port 1336 --delay 1000 --id executionId --middlewares api-mock/filterSingular.js",
    "cypress:open:unit": "yarn run cypress open --project cypress --config-file cypress.unit.json",
    "cypress:run:unit": "yarn run cypress run -b chrome --project cypress --config-file cypress.unit.json",
    "start-and-mock": "yarn run start & yarn run mock-server",
    "test:it": "start-server-and-test start-and-mock http://0.0.0.0:9000 cypress:run:unit",
    "cypress:open:e2e": "yarn run cypress open --project cypress --config-file cypress.e2e.json",
    "cypress:run:e2e": "yarn run cypress run -b chrome --project cypress --config-file cypress.e2e.json"
  },
  "devDependencies": {
    "faker": "^4.1.0",
    "json-server": "^0.16.1"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "globalSetup": "../../config/Jest-config/global-setup.js",
    "setupFiles": [
      "../../config/Jest-config/test-shim.js",
      "../../config/Jest-config/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "\\.(jpg|jpeg|png|svg)$": "../../config/Jest-config/fileMocks.js"
    },
    "testMatch": [
      "**/tests/*.(ts|tsx|js)"
    ],
    "moduleNameMapper": {
      "\\.(scss|sass|css)$": "identity-obj-proxy"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn run format",
      "yarn run lint"
    ]
  }
}
