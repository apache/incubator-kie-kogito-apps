{
  "name": "@kogito-apps/trusty",
  "version": "1.0.0",
  "main": "dist/app.bundle.js",
  "types": "dist/index.d.ts",
  "author": "",
  "license": "Apache-2.0",
  "files": [
    "dist/"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-apps.git"
  },
  "dependencies": {
    "@kogito-tooling/kie-editors-standalone": "^0.10.0",
    "@testing-library/react": "^10.4.7",
    "@testing-library/react-hooks": "^3.3.0",
    "@types/react-custom-scrollbars": "^4.0.7",
    "date-fns": "^2.14.0",
    "flatpickr": "^4.6.3",
    "react-custom-scrollbars": "^4.2.1",
    "sass": "^1.26.10",
    "sass-loader": "^9.0.2",
    "use-react-router-breadcrumbs": "^1.0.4"
  },
  "scripts": {
    "start": "webpack-dev-server --hot --color --progress --stats verbose --config ./dev-webapp/webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "build:prod": "pnpm lint && rimraf dist && rimraf dist-standalone && pnpm build && pnpm build:standalone",
    "build:standalone": "webpack --config ./dev-webapp/webpack.prod.js && locktt",
    "test": "jest --runInBand --ci --reporters=default --reporters=jest-junit",
    "test:coverage": "rimraf coverage && pnpm test --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint './src/**/*.ts{,x}'",
    "mock-server": "json-server api-mock/db.js --routes api-mock/routes.json --port 1336 --delay 1000 --id executionId --middlewares api-mock/filterSingular.js  api-mock/counterfactualPoll.js",
    "start:it": "concurrently 'pnpm serve -p 9000 -c ../cypress/serve.json ./dist-standalone/' 'pnpm run mock-server'",
    "cypress:open:it": "pnpm run cypress open --project cypress --config-file cypress.it.json",
    "cypress:run:it": "pnpm run cypress run --project cypress --config-file cypress.it.json",
    "cypress:open:e2e": "pnpm run cypress open --project cypress --config-file cypress.e2e.json",
    "cypress:run:e2e": "pnpm run cypress run --project cypress --config-file cypress.e2e.json",
    "test:it": "start-server-and-test 'pnpm start:it' http://0.0.0.0:9000 'pnpm cypress:run:it' && echo",
    "test:e2e:trusty": "pnpm cypress:run:e2e && echo"
  },
  "devDependencies": {
    "faker": "^4.1.0",
    "json-server": "^0.16.1",
    "serve": "^12.0.1"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "globalSetup": "../../config/Jest-config/global-setup.js",
    "setupFiles": [
      "../../config/Jest-config/test-shim.js",
      "../../config/Jest-config/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coverageReporters": [
      [
        "lcov",
        {
          "projectRoot": "../../"
        }
      ]
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "\\.(jpg|jpeg|png|svg)$": "../../config/Jest-config/fileMocks.js"
    },
    "testMatch": [
      "**/tests/*.(ts|tsx|js)"
    ],
    "moduleNameMapper": {
      "\\.(scss|sass|css)$": "identity-obj-proxy"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "pnpm run format",
      "pnpm run lint"
    ]
  }
}
