{
  "name": "@kogito-apps/cypress-ouia",
  "version": "1.0.0",
  "description": "This library provides a set of OUIA cypress commands.",
  "private": true,
  "main": "dist/index.js",
  "types": "index.d.ts",
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-apps.git"
  },
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "cypress": "^12.17.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "precommit": "lint-staged",
    "build": "tsc --project ./tsconfig.json || echo error",
    "build:prod": "pnpm run clean && pnpm run lint && pnpm run build",
    "lint": "eslint './src/**/*.ts{,x}'",
    "format": "prettier --config ../../.prettierrc --check --write './src/**/*.{tsx,ts,js}'",
    "clean": "rimraf dist"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "pnpm run format",
      "pnpm run lint"
    ]
  }
}
