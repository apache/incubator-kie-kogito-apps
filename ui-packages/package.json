{
  "name": "kogito-apps",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "init": "pnpm bootstrap",
    "bootstrap": "pnpm install --config.strict-peer-dependencies=false",
    "build:prod": "pnpm --filter \"./packages/**\" build:prod",
    "test": "pnpm run --filter \"./packages/**\" test:coverage",
    "test:it": "pnpm run --filter \"./packages/**\" test:it",
    "locktt": "locktt",
    "test:e2e:trusty": "pnpm -r -F @kogito-apps/trusty test:e2e:trusty",
    "format:all": "pnpm -r format --stream --",
    "format:check": "prettier --check .",
    "prepare": "cd .. && husky install"
  },
  "devDependencies": {
    "@kie-tools/dashbuilder-client": "^0.32.0",
    "@kie/lock-treatment-tool": "^0.2.4",
    "@types/node": "^18.16.19",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^10.5.4",
    "pnpm": "8.7.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3"
  },
  "resolutions": {
    "@patternfly/react-core": "^4.276.6",
    "@types/express-serve-static-core": "^4.17.21",
    "@types/minimatch": "^3.0.5",
    "axios": "0.21.2",
    "d3": "^7.0.0",
    "d3-ease": "^3.0.1",
    "d3-interpolate": "^3.0.1",
    "fast-xml-parser": "^4.2.4",
    "minimatch": "^3.0.5",
    "@types/react": "17.0.5",
    "ua-parser-js": "0.7.35",
    "yaml": "2.3.1",
    "monaco-editor": "^0.39.0",
    "react-monaco-editor": "^0.54.0",
    "monaco-yaml": "^4.0.4"
  },
  "engines": {
    "node": ">=18",
    "pnpm": "8.7.0"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "pnpm pretty-quick --staged",
      "eslint --fix"
    ]
  },
  "kieTools": {
    "requiredPreinstalledCliCommands": [
      "pnpm",
      "npm"
    ]
  }
}
