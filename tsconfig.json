{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
